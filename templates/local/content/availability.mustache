{{!
    @template format_cards/local/content/completion

    Displays the availability badge for a card

    Example context (json):
    {
        "info": [
            {
                "text": "Not available unless: <ul><li>It is on or after <strong>8 June 2012</strong></li></ul>",
                "isrestricted": 1,
                "isfullinfo": 1
            }
        ],
        "hasavailability": true
    }
}}
{{#availability}}
    {{#hasavailability}}
        {{#info}}
            <button class="bg-secondary small icon-no-margin section-availability"
                    data-toggle="popover"
                    data-content="{{text}}"
                    data-html="true">
                {{#isrestricted}}
                    {{#pix}} t/unlock, core {{/pix}}
                {{/isrestricted}}
                {{^isrestricted}}
                    {{#pix}} t/lock, core {{/pix}}
                {{/isrestricted}}
            </button>
        {{/info}}
    {{/hasavailability}}
{{/availability}}