{{!
    @template format_cards/local/content/availability

    Displays the availability badge for a card

    Example context (json):
    {
        "availability": {
            "hasavailability": true,
            "info": [
                {
                    "text": "Not available unless: <ul><li>It is on or after <strong>8 June 2012</strong></li></ul>",
                    "isrestricted": 1,
                    "isfullinfo": 1
                }
            ]
        }
    }
}}
{{#availability}}
    {{#hasavailability}}
        {{#info}}
            <button class="bg-secondary small text-body section-availability icon-no-margin hidden"
                 data-container="body"
                 data-toggle="popover"
                 data-placement="right"
                 data-html="true"
                 data-content='{{text}}'>
                {{#pix}}t/unlock, core{{/pix}}
            </button>
        {{/info}}
    {{/hasavailability}}
{{/availability}}