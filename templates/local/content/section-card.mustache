<div class="card dashboard-card{{#classes}} {{.}}{{/classes}}"
     role="listitem"
     aria-labelledby="section-{{num}}-title"
     data-sectionid="{{num}}"
     data-sectionreturnid="{{sectionreturnid}}"
     data-for="section"
     data-id="{{id}}"
     data-number="{{num}}">

    <div class="card-main-content">
        {{#header}}
            <a href="{{{url}}}" title="{{{name}}}">
                <div class="card-img-top"
                     role="presentation"
                     style="background: linear-gradient(180deg, rgba(0,0,0,0), rgba(0,0,0,0.75) 75%), url('{{#image}}{{{image}}}{{/image}}{{^image}}//via.placeholder.com/640x360{{/image}}') center/cover">
                </div>
            </a>
            <a href="{{{url}}}" title="{{{name}}}">
                <div class="card-header">
                    {{$ core_courseformat/local/content/section/badges }}
                        {{> core_courseformat/local/content/section/badges }}
                    {{/ core_courseformat/local/content/section/badges }}
                    <h3 id="section-{{num}}-title"
                        class="card-title mt-2">
                        {{{name}}}
                    </h3>
                    {{#summary}}
                        {{#summarytext}}
                            <span class="summary">
                                {{{summarytext}}}
                            </span>
                        {{/summarytext}}
                    {{/summary}}
                </div>
            </a>
        {{/header}}
    </div>

    {{#availability}}
        {{#hasavailability}}
            <div class="card-footer small">
                {{$ core_courseformat/local/content/section/availability }}
                    {{> core_courseformat/local/content/section/availability }}
                {{/ core_courseformat/local/content/section/availability }}
            </div>
        {{/hasavailability}}
    {{/availability}}

</div>